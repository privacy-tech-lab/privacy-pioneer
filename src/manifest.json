{
  "name": "privacy-pioneer",
  "version": "0.0.1",
  "permissions": [
    "webRequest",
    "<all_urls>",
    "webRequestBlocking",
    "geolocation",
    "storage",
    "tabs",
    "history",
    "downloads",
    "cookies"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": ["bundle.background.js"]
  },
  "browser_action": {
    "default_title": "Privacy Pioneer",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/favicon.svg",
    "48": "assets/favicon.svg",
    "128": "assets/favicon.svg"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
